[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{json,swcrc}]
max_line_length = 120

[*.md]
indent_size = 4
indent_style = space
max_line_length = 120
trim_trailing_whitespace = false

[*.{txt,yaml,yml,xml}]
indent_size = 2
indent_style = space
max_line_length = 120
